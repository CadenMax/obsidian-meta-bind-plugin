{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"moduleResolution": "Node",
		"importHelpers": true,
		"isolatedModules": true,
		"lib": ["DOM", "ESNext"],
		"types": ["svelte"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["packages/core/**/*.ts", "tests/**/*.ts", "node_modules/obsidian/publish.d.ts"]
}
